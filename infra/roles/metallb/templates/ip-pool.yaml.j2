apiVersion: metallb.io/v1beta1
kind: IPAddressPool
metadata:
    name: vip
    namespace: metallb-system
spec:
    addresses:
    - {{ metallb_vip }}
    autoAssign: true
---
apiVersion: metallb.io/v1beta1
kind: L2Advertisement
metadata:
    name: vip
    namespace: metallb-system
spec:
    ipAddressPools:
    - vip